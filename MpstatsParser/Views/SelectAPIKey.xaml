<Window x:Class="MpstatsParser.Views.SelectAPIKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MpstatsParser.Views"
        mc:Ignorable="d"
        Title="Выбор API ключа" Height="141" Width="286" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="88,25,0,0" Text="Укажите API ключ" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" TextAlignment="Center" Text="{Binding APIKey,Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Center" Width="266"/>
        <Button Command="{Binding SaveApiKey}" Content="Сохранить" HorizontalAlignment="Center" Margin="0,77,0,0" VerticalAlignment="Top" Height="23" Width="266"/>

    </Grid>
</Window>
